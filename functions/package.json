{
  "name": "food-analysis-line-bot-functions",
  "description": "Firebase Functions for Food Analysis LINE Bot",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "fix-style": "npm run format && npm run lint:fix"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@line/bot-sdk": "^7.5.2",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "uuid-v4": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "prettier": "^2.8.8"
  },
  "private": true
}
